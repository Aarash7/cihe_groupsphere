<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefWidth="750.0" prefHeight="420.0"
            style="-fx-background-color: transparent;"
            stylesheets="@profilepage.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.cihe_groupsphere.ProfilePageController">

    <HBox spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

        <!-- LEFT: Profile Card -->
        <VBox alignment="CENTER" spacing="15" prefWidth="250"
              style="-fx-background-color: white; -fx-background-radius: 18; -fx-padding: 20;">
            <effect>
                <DropShadow blurType="TWO_PASS_BOX" color="#09363733" radius="14" spread="0.3" offsetX="0" offsetY="4" />
            </effect>

            <ImageView fx:id="profileImage" fitWidth="120" fitHeight="120" preserveRatio="true"
                       style="-fx-background-radius: 60; -fx-effect: dropshadow(gaussian, #44a08d44, 4, 0.4, 0, 3);">
                <image>
                    <Image url="@Photo.png"/>
                </image>
            </ImageView>

            <Button fx:id="changeImageButton" text="Change Picture" styleClass="secondary-button"/>

            <Label fx:id="userNameLabel" text="Your Name"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #093637;"/>
            <Label fx:id="userEmailLabel" text="your.email@example.com"
                   style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
        </VBox>

        <!-- RIGHT: Editable Info Form -->
        <VBox spacing="14" alignment="TOP_LEFT" style="-fx-background-color: white; -fx-background-radius: 18; -fx-padding: 20;" HBox.hgrow="ALWAYS">
            <effect>
                <DropShadow blurType="TWO_PASS_BOX" color="#09363733" radius="14" spread="0.3" offsetX="0" offsetY="4" />
            </effect>

            <Label text="Account Details" styleClass="section-title"/>

            <Label text="Full Name" styleClass="field-label"/>
            <TextField fx:id="nameField" promptText="Full Name" styleClass="profile-field" />

            <Label text="Current Password" styleClass="field-label"/>
            <PasswordField fx:id="currentPasswordField" promptText="Current Password" styleClass="profile-field" />

            <Label text="New Password" styleClass="field-label"/>
            <PasswordField fx:id="passwordField" promptText="New Password" styleClass="profile-field" />

            <Label text="Confirm New Password" styleClass="field-label"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password" styleClass="profile-field" />

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label fx:id="statusLabel" style="-fx-font-size: 13px; -fx-text-fill: #ea384d;"/>
                <Button fx:id="saveButton" text="Save Changes" styleClass="save-button" onAction="#handleSave" />
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
