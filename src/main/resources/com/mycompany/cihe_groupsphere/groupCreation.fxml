<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="520.0" prefWidth="800.0" style="-fx-background-color: transparent;" stylesheets="@profilepage.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.cihe_groupsphere.GroupCreation">

    <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

        <!-- Title -->
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #093637;" text="My Groups" />

        <!-- Card container -->
        <HBox spacing="20" VBox.vgrow="ALWAYS">
            <!-- Left: Groups List -->
            <VBox alignment="TOP_LEFT" prefWidth="450" spacing="15" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;" HBox.hgrow="ALWAYS" maxWidth="Infinity">
                <effect>
                    <DropShadow color="#09363733" offsetY="4" radius="14" />
                </effect>
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill:#44a08d;" text="Groups Created" />
                <ListView fx:id="groupsListView"  HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            </VBox>

            <!-- Right: Create New Group with Team Members -->
            <VBox alignment="TOP_LEFT" prefWidth="300" spacing="12" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;" HBox.hgrow="ALWAYS" maxWidth="Infinity">

                <effect>
                    <DropShadow color="#09363733" offsetY="4" radius="14" />
                </effect>

                <Label style="-fx-font-size: 16px; -fx-font-weight:bold; -fx-text-fill: #44a08d;" text="Create New Group" />
                <TextField fx:id="groupNameField" promptText="Group Name" styleClass="profile-field" />
                <TextField fx:id="groupDescField" promptText="Short Description" styleClass="profile-field" />
                <!-- Team Members Section -->
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #093637;" text="Team Members" />
                <ListView fx:id="membersListView" prefHeight="120" VBox.vgrow="ALWAYS"/>
                <HBox spacing="8">
                    <TextField fx:id="memberEmailField" promptText="Enter Member's Email" styleClass="profile-field" />
                    <Button fx:id="addMemberBtn" onAction="#handleAddMember" styleClass="save-button" text="Add" />
                </HBox>
                <Button fx:id="createGroupBtn" onAction="#handleCreateGroup" styleClass="save-button" text="Create Group" />
                <Label fx:id="statusLabel" style="-fx-text-fill: #ea384d; -fx-font-size: 12px;" text="" />

            </VBox>

        </HBox>
    </VBox>
</AnchorPane>
